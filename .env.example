# Flask
SECRET_KEY=your-secret-key-here
FLASK_CONFIG=development

# Database (SQLite for dev, PostgreSQL for prod)
DATABASE_URL=sqlite:///lol_analyzer.db
# DATABASE_URL=postgresql://user:pass@localhost/lol_analyzer

# Riot Games API
RIOT_API_KEY=your-riot-api-key
RIOT_VERIFICATION_UUID=d0d11145-7370-4adc-804a-fe67f762154e

# Discord Bot
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id

# LLM (OpenCode Zen API - OpenAI-compatible)
LLM_API_KEY=your-zen-api-key
LLM_API_URL=https://api.opencode.ai/v1/chat/completions
LLM_MODEL=deepseek-chat
LLM_KNOWLEDGE_EXTERNAL=1
LLM_PATCH_NOTES_LOCALE=en-us
# Optional absolute or repo-relative path to custom LoL knowledge JSON
# LLM_KNOWLEDGE_FILE=app/analysis/knowledge/game_knowledge.json

# Admin
ADMIN_EMAIL=your-email@example.com

# Worker Settings
CHECK_INTERVAL_MINUTES=5
WEEKLY_SUMMARY_DAY=Monday
WEEKLY_SUMMARY_TIME=09:00
