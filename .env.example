# Flask
SECRET_KEY=your-secret-key-here
FLASK_CONFIG=development

# Database (SQLite for dev, PostgreSQL for prod)
DATABASE_URL=sqlite:///lol_analyzer.db
# DATABASE_URL=postgresql://user:pass@localhost/lol_analyzer

# Riot Games API
RIOT_API_KEY=your-riot-api-key
RIOT_VERIFICATION_UUID=d0d11145-7370-4adc-804a-fe67f762154e

# Discord Bot
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id

# LLM (OpenCode Zen API - OpenAI-compatible)
LLM_API_KEY=your-zen-api-key
LLM_API_URL=https://opencode.ai/zen/v1/chat/completions
# Set to a chat-completions model available on your provider account (example: glm-5)
LLM_MODEL=glm-5
# Optional comma-separated fallback models used only for retry variants (example: glm-4.5-air)
LLM_FALLBACK_MODELS=
LLM_TIMEOUT_SECONDS=30
LLM_RETRIES=1
LLM_RETRY_BACKOFF_SECONDS=1.5
LLM_MAX_TOKENS=2048
# Optional soft output target for prompt guidance (0 disables; example: 300)
LLM_RESPONSE_TOKEN_TARGET=300
LLM_KNOWLEDGE_EXTERNAL=1
# Optional absolute or repo-relative path to custom LoL knowledge JSON
# LLM_KNOWLEDGE_FILE=app/analysis/knowledge/game_knowledge.json

# Admin
ADMIN_EMAIL=your-email@example.com
LOGIN_RATE_LIMIT=5 per minute
ADMIN_ANALYSIS_JSON_MAX_BYTES=262144
MAX_CONTENT_LENGTH=1048576

# Shared rate limiting / cache backend (optional)
# RATE_LIMIT_REDIS_URL=redis://localhost:6379/0
RIOT_RATE_LIMIT_PER_MINUTE=100
DISCORD_RATE_LIMIT_COUNT=10
DISCORD_RATE_LIMIT_WINDOW_SECONDS=10

# Worker Settings
CHECK_INTERVAL_MINUTES=5
ASSET_REFRESH_HOURS=6
WEEKLY_SUMMARY_DAY=Monday
WEEKLY_SUMMARY_TIME=09:00
WORKER_MAX_WORKERS=4
